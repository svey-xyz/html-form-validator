{
	"name": "vldx",
	"version": "1.0.0",
	"description": "A Javascript based HTML form validator that's easy to use, reduces API calls, and supports custom rules.",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"scripts": {
		"build": "tsup src/index.ts --format cjs,esm --dts --clean",
		"watch": "npm run build -- --watch src",
		"prepublishOnly": "npm run build"
	},
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.mjs",
			"types": "./dist/index.d.ts"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/svey-xyz/html-form-validator.git"
	},
	"keywords": [
		"form",
		"validation",
		"input",
		"html-form",
		"validator"
	],
	"author": "svey.xyz",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/svey-xyz/html-form-validator/issues"
	},
	"homepage": "https://github.com/svey-xyz/html-form-validator#readme",
	"dependencies": {
		"tsup": "^6.4.0",
		"typescript": "^4.8.2"
	}
}
